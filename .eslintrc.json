{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "plugins": [],
  "extends": [
    "eslint:recommended",
    "eslint-config-hurumhorology",
    "eslint-config-hurumhorology/typescript",
    "eslint-config-hurumhorology/prettier",
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "./",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": ["node_modules", "public", ".git", "build"],
  "rules": {}
}
